generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RainboColor {
  VERMELHO
  LARANJA
  AMARELO
  VERDE
  AZUL
  ANIL
  VIOLETA
}

model User {
  id            String      @id @default(uuid())
  name          String
  cpf           String      @unique
  email         String      @unique
  favoriteColor RainboColor
  observations  String?
}
